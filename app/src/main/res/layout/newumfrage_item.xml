<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">


    <ImageView
        android:id="@+id/newUmfrageitem_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        app:srcCompat="@mipmap/ic_insert_drive_file_black_24dp" />

    <TextView
        android:id="@+id/tv_newUmfrageitem_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:layout_toRightOf="@id/newUmfrageitem_image"
        android:textSize="20sp"
        android:text="TextView" />

    <Button
        android:id="@+id/b_newUmfrageitem_deleteItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp" />


</RelativeLayout>