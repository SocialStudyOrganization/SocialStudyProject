<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndlp.socialstudy.NewsFeed.NewsAnzeigeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_newsanzeigenzurück"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tv_newsanzeigen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Hier sollte eigentlich der Text stehen :("
            android:layout_above="@id/b_newsanzeigenzurück"/>

    </RelativeLayout>


</FrameLayout>
