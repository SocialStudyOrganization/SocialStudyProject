<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndlp.socialstudy.NavigationDrawer_BottomNavigation.MainMenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b_toSkripte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="166dp"
            android:text="Skripte" />

        <Button
            android:id="@+id/b_toExercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/b_toSkripte"
            android:layout_marginEnd="62dp"
            android:text="Übungen" />

        <Button
            android:id="@+id/b_toAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_toSkripte"
            android:layout_below="@+id/b_toSkripte"
            android:layout_marginTop="74dp"
            android:text="Lösungen" />

        <Button
            android:id="@+id/b_toUmfragen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/b_toAnswers"
            android:layout_alignEnd="@+id/b_toExercises"
            android:text="Umfragen" />

        <Button
            android:id="@+id/b_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:layout_toStartOf="@+id/b_toExercises"
            android:text="Button" />
    </RelativeLayout>


</FrameLayout>
