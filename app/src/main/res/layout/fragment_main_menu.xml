<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndlp.socialstudy.NavigationDrawer_BottomNavigation.MainMenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="11dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b_toSkripte"
                    android:layout_width="140dp"
                    android:layout_height="205dp"
                    android:layout_marginBottom="23dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/shape_course_button"
                    android:paddingTop="135dp"
                    android:text="@string/coursepage_Scripts"
                    android:textAllCaps="false"
                    android:textColor="@color/weiß"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/b_toAnswers"
                    android:layout_width="140dp"
                    android:layout_height="205dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape_course_button"
                    android:paddingTop="135dp"
                    android:text="@string/coursepage_solutions"
                    android:textAllCaps="false"
                    android:textColor="@color/weiß"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b_toTasks"
                    android:layout_width="140dp"
                    android:layout_height="205dp"
                    android:layout_marginBottom="23dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/shape_course_button"
                    android:paddingTop="135dp"
                    android:text="@string/coursepage_exercises"
                    android:textAllCaps="false"
                    android:textColor="@color/weiß"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/b_toUmfragen"
                    android:layout_width="140dp"
                    android:layout_height="205dp"
                    android:background="@drawable/shape_course_button"
                    android:paddingTop="135dp"
                    android:text="@string/coursepage_polls"
                    android:textAllCaps="false"
                    android:textColor="@color/weiß"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/b_logout"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="537dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dark_button"
                android:text="@string/coursepage_coursemembers"
                android:textAllCaps="false"
                android:textColor="@color/weiß"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
