<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndlp.socialstudy.NavigationDrawer_BottomNavigation.MainMenuFragment">

    <!--
    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_cnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_oben"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/b_toSkripte"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_course_button"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_skripte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="13dp"
                        app:srcCompat="@drawable/icon_script" />

                    <TextView
                        android:id="@+id/tv_skripte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="18dp"
                        android:text="Skripte"
                        android:textAlignment="center"
                        android:textColor="@color/weiß"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/b_toTasks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_course_button"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="13dp"
                        app:srcCompat="@drawable/icon_exercise" />

                    <TextView
                        android:id="@+id/tv_tasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="18dp"
                        android:text="Übungen"
                        android:textAlignment="center"
                        android:textColor="@color/weiß"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_unten"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/b_toAnswers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_course_button"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="13dp"
                        app:srcCompat="@drawable/icon_solution" />

                    <TextView
                        android:id="@+id/tv_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="18dp"
                        android:text="Lösungen"
                        android:textAlignment="center"
                        android:textColor="@color/weiß"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/b_toUmfragen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_course_button"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_umfragen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="13dp"
                        app:srcCompat="@drawable/icon_poll" />

                    <TextView
                        android:id="@+id/tv_umfragen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="18dp"
                        android:text="Umfragen"
                        android:textAlignment="center"
                        android:textColor="@color/weiß"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/b_kursmitglieder"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_dark_button"
                android:text="Kursmitglieder"
                android:textAllCaps="false"
                android:textColor="@color/weiß"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>