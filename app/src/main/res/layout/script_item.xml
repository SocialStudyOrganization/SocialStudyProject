<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/script_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/script_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/script_icon"
        android:maxLines="1"
        android:text="Protokoll 18.01.1997"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/script_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/script_name"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/script_icon"
        android:maxLines="1"
        android:text="28.09.2017"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/script_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#757575"
        android:layout_alignBottom="@+id/script_icon"
        android:layout_alignEnd="@+id/script_name"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>