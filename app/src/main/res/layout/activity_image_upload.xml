<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_whitetexture"
    tools:context="com.ndlp.socialstudy.Umfragen.UmfrageErstellen.NewUmfrageActivity">

    <RelativeLayout
        android:id="@+id/rl_imageUploadTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2C3E50">

        <ImageView
            android:id="@+id/iv_imageUploadback"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_arrowback" />

        <TextView
            android:id="@+id/tv_imageUploadheaderbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="7dp"
            android:paddingTop="7dp"
            android:text="Datei hochladen"
            android:textColor="@color/weiß"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_imageUploadeinreichen"
        android:layout_width="306dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_dark_button">

        <TextView
            android:id="@+id/tv_imageUploadeinreichen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Hochladen"
            android:textColor="@color/weiß"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_imageUploadcontainer"
        android:layout_width="315dp"
        android:layout_height="425dp"
        android:layout_alignBottom="@+id/rl_imageUploadeinreichen"
        android:layout_below="@id/rl_imageUploadTopBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_course_button">

        <TextView
            android:id="@+id/tv_imageUploadcontainerhead"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@drawable/shape_pollitem_head"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:text="Bilddatei"
            android:textColor="@color/weiß"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_pollitem_head">

            <EditText
                android:id="@+id/et_headingimageUpload"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_bluetextfeld"
                android:hint="Dateiname"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:textColor="@color/weiß"
                android:textColorHint="@color/weiß"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_imageUploadpreview"
            android:layout_width="290dp"
            android:layout_height="265dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="175dp">

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
