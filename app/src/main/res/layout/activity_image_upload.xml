<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_whitetexture"
    tools:context="com.ndlp.socialstudy.Umfragen.UmfrageErstellen.NewUmfrageActivity">

    <RelativeLayout
        android:id="@+id/rl_imageUploadTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2C3E50">

        <!--
        <ImageView
            android:id="@+id/iv_imageUploadback"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_arrowback" />
        -->

        <TextView
            android:id="@+id/tv_imageUploadheaderbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="7dp"
            android:paddingTop="7dp"
            android:text="Datei hochladen"
            android:textColor="@color/weiß"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/b_uploadImage"
        android:layout_width="306dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_dark_button">

        <TextView
            android:id="@+id/tv_imageUploadeinreichen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Hochladen"
            android:textColor="@color/weiß"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_imageUploadcontainer"
        android:layout_width="315dp"
        android:layout_height="425dp"
        android:layout_alignBottom="@+id/b_uploadImage"
        android:layout_below="@id/rl_imageUploadTopBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_course_button">

        <TextView
            android:id="@+id/tv_imageUploadcontainerhead"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@drawable/shape_pollitem_head"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:text="Bilddatei"
            android:textColor="@color/weiß"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_optionPolladdItemLayout"
            android:layout_width="306dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/shape_pollitem_head">

            <EditText
                android:id="@+id/et_imageName"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_bluetextfeld"
                android:hint="Dateiname"
                android:inputType="textPersonName"
                android:paddingStart="4dp"
                android:textColor="@color/weiß"
                android:textColorHint="@color/weiß"
                android:textSize="14sp" />

            <Button
                android:id="@+id/b_chooseImage"
                android:layout_width="62dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_send_error_or_feedback"
                android:text="Durchsuchen"
                android:textAllCaps="false"
                android:textColor="@color/weiß"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_imageUploadpreview"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_optionPolladdItemLayout"
            android:layout_below="@id/tv_imageUploadcontainerhead"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_imagePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@color/transparent" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
