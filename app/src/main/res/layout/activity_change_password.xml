<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndlp.socialstudy.NavigationDrawer_BottomNavigation.ChangePasswordActivity">

    <EditText
        android:id="@+id/et_oldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter old password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_newpassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter new password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_oldpassword"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_newpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter new password again"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_newpassword1"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/b_sendnewpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwort einreichen"
        android:layout_below="@id/et_newpassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
