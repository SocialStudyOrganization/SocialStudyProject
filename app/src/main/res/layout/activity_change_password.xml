<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_feedback_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dunkelblau"
    tools:context="com.ndlp.socialstudy.NavigationDrawer_BottomNavigation.FehlerMeldenAcivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dunkelblau"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tv_toolbar_title_workaround_changepw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:text="Passwort"
                android:textAlignment="viewStart"
                android:textColor="@color/weiß"
                android:textSize="22sp" />

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/toolbar_dropshadow" />

        </FrameLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_oldpassword"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bluetextfeld"
        android:layout_below="@id/ll_topbar"
        android:hint="Altes Passwort"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:textColor="@color/weiß"
        android:textColorHint="@color/weiß"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_newpassword1"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_below="@id/et_oldpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bluetextfeld"
        android:hint="Neues Passwort"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:textColor="@color/weiß"
        android:textColorHint="@color/weiß"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_newpassword2"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_newpassword1"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bluetextfeld"
        android:hint="Passwort bestätigen"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:textColor="@color/weiß"
        android:textColorHint="@color/weiß"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_sendnewpassword"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_below="@+id/et_newpassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_send_error_or_feedback"
        android:text="Passwort ändern"
        android:textAllCaps="false"
        android:textColor="@color/weiß"
        android:textSize="16sp" />


</RelativeLayout>

