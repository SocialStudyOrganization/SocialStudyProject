<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_screen3">

        <RelativeLayout
            android:id="@+id/rl_umfrageitemtopbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tv_umfrageitemheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nadler, bis 21.12.1997, 16.00 Uhr"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"/>

            <ImageView
                android:id="@+id/umfrageitemoptions"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_settings_black_24dp">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_umfrageitemtopbar">

            <ImageView
                android:id="@+id/iv_umfrageitemimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_insert_drive_file_black_24dp"/>

            <TextView
                android:id="@+id/tv_umfrageitemtopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_umfrageitemimage"
                android:textSize="15sp"
                android:text="Mathe auf diesen Montag verschieben?"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:maxLines="3"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_umfrageitemmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mehr..."
                android:layout_toRightOf="@id/iv_umfrageitemimage"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:textSize="18sp"
                />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>